{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "./functions/node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@src/*" : [ "/src/*" ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
